    bool success;
    string[] errors = { };
    // Will hold any error message created. Not currently displayed on the webpage

    MudTextField<string> usernameField;
    MudTextField<string> passwordField;
    // Can access the values from the text boxes using .Value
    //  usernameField.Value.Equals(something);

    MudForm form;


    // Variables used with testing validation. Will be replaced with values retrieved from the database

    private string TestEmail(string uname) // Username/Email validation function
    {
        if (string.IsNullOrWhiteSpace(uname))
        {
            return "Email cannot be left blank";
        }
        else if (!ValidEmailFormat(uname))
        {
            return "Invalid email format";
            // Will display this if the value isn't correct
        }
        else if (users.FirstOrDefault(x => x.Email.Equals(uname)) == null)
        {
            return "Not correct";
        }
        else if (!uname.Equals(users.FirstOrDefault(x => x.Email.Equals(uname)).Email))
        {
            return "Not correct";
            // Will display this if the value isn't correct
        }

        return null;
        // The return null can be thought of as the return true
    }


    private string TestPassword(string pword) // Password validation function (the same as the username/email function)
    {
        if (string.IsNullOrWhiteSpace(pword))
        {
            return "Enter something";
        }
        else if (ValidPasswordFormat(pword).Count > 0)
        {
            string errorString = "";
            foreach (string i in ValidPasswordFormat(pword))
            {
                errorString += i + System.Environment.NewLine;
            }
            return errorString;
        }

        return null;
    }

    //validates if the input into the email field is a valid email
    private bool ValidEmailFormat(string email)
    {
        try
        {
            MailAddress mailAddress = new MailAddress(email);
            return true;
        }
        catch (FormatException)
        {
            return false;
        }
    }

    private ArrayList ValidPasswordFormat(string password)
    {
        ArrayList passwordErrors = new ArrayList();

        Regex numberRequirement = new Regex(@"[0-9]+");
        Regex lowerRequirement = new Regex(@"[a-z]+");
        Regex upperRequirement = new Regex(@"[A-Z]+");
        Regex specialRequirement = new Regex(@"[!@#$%^&*()_+=\[{\]};:<>|./?,-]");
        Regex lengthRequirement = new Regex(@".{8,20}");


        if (!numberRequirement.IsMatch(password))
        {
            passwordErrors.Add("Password must conatin at least one number");
        }
        if (!lowerRequirement.IsMatch(password))
        {
            passwordErrors.Add("Password must conatin at least one lowercase character");
        }
        if (!upperRequirement.IsMatch(password))
        {
            passwordErrors.Add("Password must conatin at least one uppercase character");
        }
        if (!specialRequirement.IsMatch(password))
        {
            passwordErrors.Add("Password must conatin at least one special character");
        }
        if (!lengthRequirement.IsMatch(password))
        {
            passwordErrors.Add("Password must be between 8 and 20 characters");
        }
        if (users.FirstOrDefault(x => x.Email.Equals(usernameField.Value)) != null)
        {
            string matchingPassword = users.FirstOrDefault(x => x.Email.Equals(usernameField.Value)).Password;
            if (!matchingPassword.Equals(password))
            {
                passwordErrors.Add("Password is incorrect");
            }
        }

        return passwordErrors;

    }

}
